<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titlemaindark"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/startBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@string/main_title_description"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titlemain" />

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="201dp"
        android:layout_height="89dp"
        android:layout_marginBottom="40dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:scaleX=".8"
        android:scaleY=".8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/startpress" />

    <ImageView
        android:id="@+id/mainTitle"
        android:layout_width="362dp"
        android:layout_height="126dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/maintitle" />

    <ImageView
        android:id="@+id/mainSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startBackground"
        app:srcCompat="@drawable/maintitlesub" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Version 0.1.2"
        app:layout_constraintBottom_toBottomOf="@+id/startBackground"
        app:layout_constraintStart_toStartOf="@+id/startBackground" />

    <TextView
        android:id="@+id/cwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All images belong to their respective owners."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/mainSubTitle"
        app:layout_constraintStart_toStartOf="@+id/startBackground"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>